{% extends "admin_base.njk"%}

{% block titulo %}Administraci√≥ | Directors{% endblock %}

{% block contenido%}
<h1 class="centrar">Directors</h1>
{% if not directors or directors.length === 0 %}
<h2 class="centrar">No s'han trobat directors<h2>
{% endif %}
<ul>
    {% for director in directors %}
    <li class="mb-3">{{ director.nom }} 
        <a href="/admin/directors/editar/{{ director.id }}" class="btn btn-primary mx-2">Editar</a>
         <form action="/admin/directors/{{ director.id }}" method="post" class="d-inline-block">
            <input type="hidden" name="_method" value="delete" />
            <button type="submit" class="btn btn-danger">
                Borrar
            </button>
        </form>
    </li>
    {% endfor %}
</ul>
{% endblock %}