{% extends "public_base.njk"%}

{% block titulo %}Pelicules | Login{% endblock %}

{% block contenido%}
<h1 class="centrar">Login</h1>
{% if error %}
<div class="alert alert-danger" role="alert">
  {{ error }}
</div>
{% endif %}
<form action="/auth/login" method="post">
 <div class="form-group mb-3">
        <label for="login"> Usuari:</label>
        <input required type="text" class="form-control" id="login" name="login" minlength="5"
                placeholder="Usuari..."/>
    </div>
    <div class="form-group mb-3">
        <label for="sinopsis"> Contrasenya:</label>
        <input type="password" required class="form-control" id="password" name="password" 
                placeholder="Contrasenya..." >
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary float-end">Login</button>
    </div>
</form>
{% endblock %}